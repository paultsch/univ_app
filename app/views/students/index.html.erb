<div class="row">
  <div class="col s12">
    <h1 class="center-align">Student's Directory</h1>
  </div>
</div>


<div class="row">
  <% @students.each do |student| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= student.name %></span>
          <p><%= student.email %></p>
          <p>Course Enrollments:
          <% if student.courses.empty? %>
            None
          <% else %>
            <ul>
              <% student.courses.each do |course| %>
                <li><%= link_to "#{course.name}", course_path(course) %></li>
              <% end %>
            </ul>
          <% end %>
          </p>
        </div>
        <div class="card-action">
          <%= link_to "View Profile", student_path(student.id) %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div class="row">
  <% @teachers.each do |teacher| %>
    <div class="col s6 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= teacher.name %></span>
          <p><%= teacher.email %></p>
          <p>Classes Taught:</p>
        </div>
        <div class="card-action">
        </div>
      </div>
    </div>
  <% end %>
</div>
